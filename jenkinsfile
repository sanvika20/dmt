pipeline {
    agent any
    tools {
        nodejs "NodeJS 18"
    }
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/sanvika20/dmt.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy process here...'
            }
        }
    }
}
